<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="UniGetUI.Pages.DialogPages.OperationFailedDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:UniGetUI.Pages.DialogPages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:widgets="using:UniGetUI.Interface.Widgets"
    MaxWidth="800"
    MaxHeight="600"
    PointerEntered="Page_PointerEntered"
    PointerExited="Page_PointerExited"
    mc:Ignorable="d">

    <Grid RowSpacing="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <!--  Header with error message  -->
        <TextBlock
            Name="headerContent"
            Grid.Row="0"
            TextWrapping="WrapWholeWords"
            AutomationProperties.HeadingLevel="Level1" />
        
        <!--  Auto-dismiss countdown banner  -->
        <InfoBar
            Name="AutoDismissInfoBar"
            Grid.Row="1"
            IsOpen="False"
            Severity="Informational"
            IsClosable="False"
            AutomationProperties.LiveSetting="Polite">
            <InfoBar.ActionButton>
                <Button
                    Name="KeepOpenButton"
                    Content="Keep Open"
                    Click="KeepOpenButton_Click"
                    AutomationProperties.Name="Keep this dialog open and cancel auto-dismiss"
                    ToolTipService.ToolTip="Prevent this dialog from closing automatically" />
            </InfoBar.ActionButton>
        </InfoBar>
        
        <!--  Command output section  -->
        <ScrollViewer
            Grid.Row="2"
            Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
            CornerRadius="6"
            HorizontalScrollMode="Disabled"
            AutomationProperties.Name="Command-line output">
            <RichTextBlock
                Name="CommandLineOutput"
                Padding="6"
                FontFamily="Consolas"
                TextWrapping="Wrap"
                IsTextSelectionEnabled="True" />
        </ScrollViewer>
        
        <!--  Close button (top-right)  -->
        <widgets:DialogCloseButton 
            Margin="0,-64,-24,0" 
            Click="CloseDialog"
            AutomationProperties.Name="Close dialog"
            ToolTipService.ToolTip="Close this dialog (Esc)" />
        
        <!--  Action buttons  -->
        <Grid
            Name="ButtonsLayout"
            Grid.Row="3"
            Margin="-24,8,-24,-24"
            Padding="24"
            x:FieldModifier="public"
            Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
            ColumnSpacing="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
        </Grid>
    </Grid>
</Page>